<h2>List of Movies</h2>
{{#each moviesList}}
<p>Title: {{title}}</p>
<p>Genre: {{genre}}</p>
<p>Plot: {{plot}}</p>
<p>Cast: </p>
<ul>
    {{#each cast}}
    <li>{{name}}</li>
    {{/each}}
</ul>
{{!-- add an edit button and edit route --}}
<form action="/movies/{{_id}}/edit" method="GET">
    <button type="submit">Edit movie</button>
</form>
{{/each}}